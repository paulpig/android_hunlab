            android:id="@+id/subject_1_down_32"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rate"
            android:layout_marginLeft="665dp"
            android:gravity="center"
            android:textSize="17sp"
            />

         <TextView
             android:id="@+id/grade_1_down_33"
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="950dp"
             android:layout_alignParentTop="true"
             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="两位数加一位数（不进位）的计算方法"
            android:textSize="18dp"/>
         <TextView 
            android:id="@+id/subject_1_down_33"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rate"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17sp"
            />
        
          <TextView
            android:id="@+id/grade_1_down_34"
