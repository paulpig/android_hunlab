             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="两位数减一位数（不退位）的计算方法"
            android:textSize="18dp"/>
         
          <TextView
            android:id="@+id/grade_1_down_37"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rect_blue" 
            android:layout_marginTop="310dp"
            android:gravity="center"
            android:text="两位数减整十数的计算方法"
            android:textSize="18dp"/>
         <TextView
            android:id="@+id/grade_1_down_38"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_alignBottom="@id/grade_1_down_37"
             android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="两位数减一位数（退位）的计算方法"
            android:textSize="18dp" />

        
     </RelativeLayout>
	  
