<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:id="@+id/scroll1"

>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_1_textview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade_1_down_q1" 
        android:textColor="#FFA500"
        android:textSize="25dp"/>

  <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_1_textview1" >

        <TextView
            android:id="@+id/grade_1_down_11"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="十几减9的计算方法"
            android:textSize="18dp"/>
        
        <TextView 
            android:id="@+id/subject_1_down_11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rate"
            android:layout_marginLeft="205dp"
            android:gravity="center"
            android:textSize="17sp"
            />
         <TextView
            android:id="@+id/grade_1_down_12"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="十几减几的计算方法"
            android:textSize="18dp" />
          <TextView 
            android:id="@+id/subject_1_down_12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rate"
            android:layout_marginLeft="665dp"
            android:gravity="center"
            android:textSize="17sp"
            />

       

    </RelativeLayout>
	<TextView
        android:id="@+id/item_1_textview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade_1_down_q2" 
        android:layout_marginTop="40dp"
        android:textColor="#FFA500"
        android:textSize="25dp"/>
       
<RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/grade_1_down_21"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="整十数加一位数的计算方法"
            android:textSize="18dp"/>
        <TextView 
            android:id="@+id/subject_1_down_21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rate"
            android:layout_marginLeft="205dp"
