<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="32dp" >

    <TextView
        android:id="@+id/draftname"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:text="草稿本"
        android:textSize="20sp" />

    <Button
        android:id="@+id/draft_write_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写"
        android:textSize="13sp" />

    <Button
        android:id="@+id/draft_erase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擦除"
        android:textSize="13sp" />

    <Button
        android:id="@+id/draft_move_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动"
        android:textSize="13sp" />

    <Button
        android:id="@+id/draft_clean_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        android:textSize="13sp" />

    <Button
        android:id="@+id/draft_finished_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="13sp" />

</LinearLayout>

<com.readboy.HandWrite.DraftView
    android:id="@+id/draft_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

</com.readboy.HandWrite.DraftView>

</LinearLayout>