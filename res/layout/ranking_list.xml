<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_views"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
    
    <TextView 
     android:id="@+id/textview"
     android:layout_width="800dp"
     android:layout_height="600dp"
     android:layout_centerInParent="true"
     android:background="@drawable/enter_dialog"
        />
    
    <TextView 	
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="160dp"
     android:textColor="#000000"
     android:text="历史记录"
     android:textSize="35dp"/>
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/pk" />
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/topgrade" />
    
    
     <TextView 	
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="270dp"
     android:layout_marginLeft="700dp"
      android:textColor="#000000"
     android:text="				次"
     android:textSize="35dp"/>
     
      <TextView 	
      android:id="@+id/fist_ranking"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
      android:layout_marginTop="270dp"
     android:layout_marginLeft="650dp"
     android:textColor="#000000"
     android:text="40"
     android:textSize="35dp"/>
      
       <TextView 	
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="470dp"
     android:layout_marginLeft="700dp"
      android:textColor="#000000"
     android:text="				积分"
     android:textSize="35dp"/>
       
        <TextView 	
     android:id="@+id/second_ranking"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="470dp"
     android:layout_marginLeft="650dp"
      android:textColor="#000000"
     android:text="40"
     android:textSize="35dp"/>
    
</RelativeLayout>