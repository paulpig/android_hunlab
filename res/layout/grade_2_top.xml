            android:id="@+id/grade_2_top_25"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/grade_2_top_24"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="4的乘法口诀"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/grade_2_top_26"
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:layout_alignParentRight="true"
             android:layout_alignBottom="@id/grade_2_top_24"
             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="乘加、乘减"
            android:textSize="18sp"/>
         
           <TextView
            android:id="@+id/grade_2_top_27"
            android:layout_width="200dp"
            android:layout_height="100dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="280dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="6的乘法口诀"
            android:textSize="18sp"/>
          
    </RelativeLayout>
    
   	<TextView
        android:id="@+id/item_1_textview3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade_2_top_q3" 
        android:layout_marginTop="40dp"
        android:textColor="#FFA500"
        android:textSize="18sp"/>
       
	<RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/grade_2_top_31"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="7的乘法口诀"
            android:textSize="18sp"/>
         <TextView
            android:id="@+id/grade_2_top_32"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="求一个数的几倍是多少的问题的计算方法"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/grade_2_top_33"
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="8的乘法口诀"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/grade_2_top_34"
            android:layout_width="200dp"
            android:layout_height="100dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="140dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="9的乘法口诀"
            android:textSize="18sp"/>
           <TextView
            android:id="@+id/grade_2_top_35"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/grade_2_top_34"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="乘法口诀表"
            android:textSize="18sp" />
        
     </RelativeLayout>
	  
</LinearLayout>
</ScrollView>