<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:id="@+id/scroll1"

>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_1_textview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade_2_top_q1" 
        android:textColor="#FFA500"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_1_textview1" >

        <TextView
            android:id="@+id/grade_2_top_11"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="不进位加法"
            android:textSize="18sp"/>
         <TextView
            android:id="@+id/grade_2_top_12"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="进位加法"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/grade_2_top_13"
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="不退位减法"
            android:textSize="18sp"/>
          <TextView
            android:id="@+id/grade_2_top_14"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="退位减法"
            android:textSize="18sp"/>
           <TextView
            android:id="@+id/grade_2_top_15"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/grade_2_top_14"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="连加"
            android:textSize="18sp" />

         <TextView
             android:id="@+id/grade_2_top_16"
             android:layout_width="200dp"
             android:layout_height="100dp"
             android:layout_alignParentRight="true"
              android:layout_alignBottom="@id/grade_2_top_14"
             android:background="@drawable/rect_org" 
             android:gravity="center"
             android:text="连减"
            android:textSize="18sp"/>
           
            <TextView
            android:id="@+id/grade_2_top_17"
            android:layout_width="200dp"
            android:layout_height="100dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="280dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="加减混合"
            android:textSize="18sp"/>
           

    </RelativeLayout>
	<TextView
        android:id="@+id/item_1_textview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/grade_2_top_q2" 
        android:layout_marginTop="40dp"
        android:textColor="#FFA500"
        android:textSize="18sp"/>
       
<RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/grade_2_top_21"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rect_blue" 
            android:gravity="center"
            android:text="乘法是相同的数相加的简便算法"
            android:textSize="18sp"/>
         <TextView
            android:id="@+id/grade_2_top_22"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_pop"
            android:gravity="center"
            android:text="5的乘法口诀"
            android:textSize="18sp" />

